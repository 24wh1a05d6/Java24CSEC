package java_worksheet;

import java.util.Scanner;

public class calculator{

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int number1,number2;
		Scanner sc =new Scanner(System.in);
		System.out.println("Enter 2 number");
		number1=sc.nextInt();
		number2=sc.nextInt();
		System.out.println("Choose an operator");
		char operator=sc.next().charAt(0);
	
		switch(operator) {
		case '+': System.out.printf("Sum of %d and %d is %d%n", number1,number2,(number1+number2));
		break;
		case '-': System.out.printf("Difference of %d and %d is %d%n", number1,number2,(number1-number2));
		break;
		case '*': System.out.printf("Multiplication of %d and %d is %d%n", number1,number2,(number1*number2));
		break;
		case '/': if(number2!=0)
			System.out.printf("Division of %d and %d is %d%n",number1,number2,(number1/number2));
		else {
			System.out.println("Invalid division");
		}
		break;
		default:System.out.println("Invalid operator"); 
		}
		
	}

}
